<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HolaMundo.MainPage">

    <StackLayout>
        <Frame BackgroundColor="Aqua" Padding="24" CornerRadius="0">
            <Label Text="Hola Mundo" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
        </Frame>
        
        <Label x:Name="lblToken" />

        <Button Text="Click Aqui" Clicked="Handle_Clicked" BackgroundColor="Fuchsia" />
        
        <Button Text="Cerrar Sesión" Clicked="Logout_Clicked" />
    </StackLayout>

</ContentPage>
